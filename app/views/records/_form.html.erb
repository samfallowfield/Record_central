
<div class="container">
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= render 'shared/errors'%>

      <%= form_with(model: @record, class: "shadow p-3 mb-3 mb-5 rounded", id:"form-color", local: true) do |f| %>
        <div class ="input-group mt-3 row">
          <%= f.label :artist, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.text_field :artist, class: "form-control shadow rounded", placeholder: "Artists name"%>
          </div>
        </div>

        <div class ="input-group mt-3 row">
          <%= f.label :album, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.text_field :album, class: "form-control mt-3 shadow rounded", placeholder: "Album name" %>
          </div>
        </div>

        <div class ="input-group mt-3 row">
          <%= f.label :genre, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.text_field :genre, class: "form-control mt-3 shadow rounded", placeholder: "Genre" %>
          </div>
        </div>

        <div class ="input-group mt-3 row">
          <%= f.label :variant, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.text_field :variant , class: "form-control mt-3 shadow rounded", placeholder: "Which variant?" %>
          </div>
        </div>

        <div class ="input-group mt-3 row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.text_area :description, rows: 10 , class: "form-control mt-3 shadow rounded", placeholder: "Tell us about the record!" %>
          </div>
        </div>

        <div class= "form-group d-flex mt-3 justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg " %>
        </div>
      <% end %>
    </div>
    <div class = "mb-3">
      <%= link_to '[ Cancel and return to records listing ]', records_path, class: "d-flex justify-content-center text-dark text-decoration-none" %>
    </div>
  </div>
</div>
