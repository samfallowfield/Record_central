<div class="container mt-5">
  <div class="row">
    <% @records.each do |record| %>
      <div class="col-sm-3 mb-3 mt-4 grid-flex">
        <div class="card" style="width: 18rem;">
          <%=image_tag src='placeholder.jpg' %>
          <div class="card-body">
            <h5 class="card-title fw-bold" id="artist_title"><%= record.album.titlecase %></h5>
            <p class="card-text"><strong>Artist: </strong><%= record.artist %></p>
            <p class="card-text"><strong>Genre: </strong><%= record.genre %></p>
            <p class="card-text"><strong>Variant: </strong><%= record.variant %></p>
            <p class="card-text"><strong>Description: </strong><%= truncate(record.description, length:25) %></p>
            <%= link_to "Details", record_path(record), class:"btn btn-primary" %>
            <%= link_to "Edit your listing", edit_record_path(record), class:"btn btn-info " %>
            <%= link_to "Remove you listing", record_path(record), class:"btn btn-danger mt-2", data:{turbo_method: :delete, "turbo-confirm": "Are you sure?"} %>
          </div>
          <small class="text-center text-muted">Listed by <%= record.user.username %></small>
        </div>
      </div>
    <% end %>
  </div>
</div>