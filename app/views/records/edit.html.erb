<h1> edit a listing</h1>

<% if @record.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @record.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model:@record, local:true) do |f| %>

  <p>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :album %>
    <%= f.text_field :album %>
  </p>
  <p>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :variant %>
    <%= f.text_field :variant %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Cancel and return to listings", records_path %>