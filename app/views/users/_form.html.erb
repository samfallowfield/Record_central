<div class="container">
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user%>

      <%= form_with(model:@user, class: "shadow p-3 mb-3 mb-5 rounded", id:"form-color", local: true) do |f| %>
        <div class ="input-group mt-3 row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Pick a username"%>
          </div>
        </div>

        <div class ="input-group mt-3 row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.email_field :email, class: "form-control mt-3 shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class ="input-group mt-3 row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class ="col-10">
            <%= f.password_field :password, class: "form-control mt-3 shadow rounded", placeholder: "Select a Password" %>
          </div>
        </div>

        <div class= "form-group d-flex mt-3 justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg " %>
        </div>
      <% end %>
    </div>
    <div class = "mb-3">
      <%= link_to '[ Cancel and return to records listings ]', records_path, class: "d-flex justify-content-center text-dark text-decoration-none" %>
    </div>
  </div>
</div>
